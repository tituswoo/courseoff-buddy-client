{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "update",
            "args": ["update"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"]
        },
        {
            "args": [
                "run",
                "dev"
            ],
            "suppressTaskName": true,
            "taskName": "dev",
            "isBuildCommand": true
        },
        {
            "args": [
                "run",
                "prod"
            ],
            "suppressTaskName": true,
            "taskName": "prod",
            "isBuildCommand": false
        },
        {
            "args": [
                "run",
                "clean"
            ],
            "suppressTaskName": true,
            "taskName": "clean",
            "isBuildCommand": false
        }
    ]
}